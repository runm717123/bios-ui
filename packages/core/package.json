{
	"name": "@bios-ui/core",
	"type": "module",
	"version": "0.0.1",
	"scripts": {
		"build": "pnpm build:sd && pnpm build:css",
		"publish": "pnpm publish --access public",
		"build:css": "vite build",
		"build:sd": "style-dictionary build --config style-dictionary.config.json --verbose",
		"dev": "nodemon --watch src --exec \"node build-on-change.js\""
	},
	"nodemonConfig": {
		"ignore": [
			"**/test/**",
			"**/docs/**"
		],
		"watch": [
			"dist/*.css",
			"src/**/*.js"
		],
		"delay": 1500
	},
	"devDependencies": {
		"@bios-ui/eslint-config": "workspace:*",
		"@linaria/core": "^6.3.0",
		"@linaria/vite": "^5.0.4",
		"@vitejs/plugin-react": "^4.4.1",
		"@wyw-in-js/babel-preset": "^0.6.0",
		"@wyw-in-js/vite": "^0.6.0",
		"dashify": "^2.0.0",
		"style-dictionary": "^5.0.0",
		"vite": "^6.3.5"
	},
	"files": [
		"index.css"
	],
	"main": "index.css",
	"sideEffects": [
		"index.css"
	]
}